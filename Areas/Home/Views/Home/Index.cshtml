@model avatCo.Models.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-20 px-6 text-center">
    <div class="hero-section position-relative text-center text-white">
        <img src="~/uploads/Home/design website mirzie.png" class="img-fluid w-100" alt="Hero Background" />
        <div class="hero-content position-absolute top-50 start-50 translate-middle">
            <h1 class="fw-bold">به فروشگاه اوات کو خوش آمدید</h1>
            <p class="lead">بزرگ ترین فروشگاه آنلاین محصولات گوسفندی غرب کشور</p>
            <a href="/Products" class="btn btn-light btn-lg">دیدن محصولات</a>
        </div>
    </div>
</section>

<section class="categories container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>دسته بندی ها</h4>
        <a href="/Products" class="btn btn-outline-dark">همه</a>
    </div>

    <div class="row g-3">
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 category-card">
                <img src="~/uploads/Home/blood.png" class="category-img" alt="خون" />
                <div class="card-body"><h6>خون</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 category-card">
                <img src="~/uploads/Home/bone.jpg" class="category-img" alt="استخوان" />
                <div class="card-body"><h6>استخوان</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 category-card">
                <img src="~/uploads/Home/Meat.jpg" class="category-img" alt="گوشت" />
                <div class="card-body"><h6>گوشت</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 category-card">
                <img src="~/uploads/Home/skin.jpg" class="category-img" alt="پوست ها" />
                <div class="card-body"><h6>پوست ها</h6></div>
            </div>
        </div>
    </div>
</section>

@* Promos + Services section (RTL) *@
<section class="home-promo" dir="rtl">
    <div class="container">

        <!-- Row 1: Promotions -->
        <div class="promo-grid">
            <div class="promo-card">
                <img src="@Url.Content("~/uploads/Home/50-parcent.jpg")" alt="۵۰٪ تخفیف" />
                <p class="promo-caption">۵۰ درصد تخفیف فقط تا آخر امروز</p>
            </div>

            <div class="promo-card">
                <img src="@Url.Content("~/uploads/Home/shipping.png")" alt="ارسال رایگان" />
                <p class="promo-caption">تا آخر این ماه هزینه پست با ما</p>
            </div>
        </div>

        <!-- Row 2: Services (pink band) -->
        <div class="services-wrapper">
            <div class="services-grid">
                <article class="service-card">
                    <img src="@Url.Content("~/uploads/Home/girl_Chemist.png")" alt="نازل ترین قیمت" />
                    <div class="overlay"><h3>به نازل ترین قیمت</h3></div>
                </article>

                <article class="service-card">
                    <img src="@Url.Content("~/uploads/Home/male_chemist2.jpg")" alt="خدمات متناسب" />
                    <div class="overlay"><h3>خدمات متناسب با نیاز شما</h3></div>
                </article>

                <article class="service-card">
                    <img src="@Url.Content("~/uploads/Home/male_chemist.jpg")" alt="تخصص آزمایشگاهی" />
                    <div class="overlay"><h3>تخصصی‌ترین حوزه‌های آزمایشگاهی</h3></div>
                </article>
            </div>
        </div>

    </div>
</section>

