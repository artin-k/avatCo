@model avatCo.Models.User
@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>profile</h3>

<div class="max-w-xl mx-auto p-6 bg-white shadow rounded">
    <h2 class="text-2xl font-bold mb-4">Welcome, @Model.UserName</h2>

    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
        Edit Profile
    </button>

    <ul class="space-y-2">
        @if (!string.IsNullOrEmpty(@Model.ProfileImageUrl))
        {
            <img src="@Model.ProfileImageUrl" alt="Profile Picture" class="rounded-circle" width="100" />
        }        
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>date sign up:</strong> @Model.RegisteredAt</li>
        <li><strong>Gender:</strong> @Model.Gender</li>
        <li><strong>Full Name</strong>@Model.FullName</li>
        <li><strong>Address:</strong> @Model.Address</li>
        <li><strong>Registered:</strong> @Model.RegisteredAt.ToShortDateString()</li>
        <li><strong>Orders:</strong> @Model.Orders.Count</li>
        <li><strong>Cart Items:</strong> @Model.CartItems.Count</li>

    </ul>
</div>
 
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                <td>
                    <form method="post" action="/Cart/Remove">
                        <input type="hidden" name="CartItemId" value="@item.Id" />
                        <button class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



 <!--edit modal-->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editProfileForm" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(@Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.UserName" width="60" height="60" style="object-fit:cover;" />
                    }

                    <input type="file" name="ProfileImageFile" class="form-control mb-2" />

                    <input type="text" name="UserName" class="form-control mb-2" placeholder="User name" value="@Model.UserName" />
                    <input type="text" name="FullName" class="form-control mb-2" placeholder="Full Name" value="@Model.FullName" />
                    <label for="gender">Gender:</label>
                    <select name="Gender" id="Gender">
                        <option value="Male">Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    
                    <input type="text" name="PhoneNumber" class="form-control mb-2" placeholder="Phone" value="@Model.PhoneNumber" />
                    <label for="dob">Date of Birth:</label>
                    <input type="date" name="DateOfBirth" id="dob" value="@Model.DateOfBirth" />
                    <textarea name="Address" class="form-control mb-2" placeholder="Address">@Model.Address</textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Load profile data into modal
    $('#editProfileModal').on('show.bs.modal', function () {
        $.get('/Profile/GetProfileData', function (data) {
            $('#editProfileForm input[name="UserName"]').val(data.userName);
            $('#editProfileForm input[name="FullName"]').val(data.fullName);
            $('#editProfileForm input[name="PhoneNumber"]').val(data.phoneNumber);
            $('#editProfileForm textarea[name="Address"]').val(data.address);
            $('#editProfileForm select[name="Gender"]').val(data.gender);
            $('#editProfileForm input[name="DateOfBirth"]').val(data.dateOfBirth?.split("T")[0]);
            // ensures correct format (yyyy-MM-dd)
        });
    });

    // Save changes
    $("#editProfileForm").submit(function (e) {
        e.preventDefault();

        let formData = new FormData(this); // supports files!

        $.ajax({
            url: "/Profile/UpdateProfile",
            type: "POST",
            data: formData,
            processData: false, // don't convert to query string
            contentType: false, // let browser set multipart/form-data
            success: function () {
                location.reload();
            },
            error: function (xhr) {
                console.error("Error:", xhr.responseText);
                alert("Something went wrong: " + xhr.responseText);
            }
        });
    });
</script>

