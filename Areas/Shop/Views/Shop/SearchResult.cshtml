

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="search-results-header mb-4">
                <h2>نتایج جستجو برای "@Model.Query"</h2>
                <p class="text-muted">@Model.TotalCount محصول یافت شد</p>
            </div>
        </div>
    </div>

    @if (Model.Products.Any())
    {
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="product-card">
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image">
                        <div class="product-info">
                            <h5 class="product-name">@product.Name</h5>
                            <p class="product-brand">@product.Brand</p>
                            <div class="product-price">@product.Price.ToString("N0") تومان</div>
                            <button class="btn btn-primary btn-sm add-to-cart">افزودن به سبد</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" 
                               href="/Search?query=@Model.Query&page=@i&category=@Model.Category">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h3 class="text-muted mt-3">محصولی یافت نشد</h3>
            <p>میتوانید با جستجوی عبارت دیگری یا حذف فیلترها دوباره امتحان کنید</p>
        </div>
    }
</div>