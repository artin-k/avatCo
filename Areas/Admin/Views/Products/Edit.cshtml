@model avatCo.Models.Product
@{
    ViewData["Title"] = "Edit product";
}

<h2>Edit Service</h2>
<h4>DEBUG: @Model.Id - @Model.Title</h4>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <label class="form-label">Current Image</label>
            <img src="@Model.ImageUrl" alt="Service Image" style="width: 80px; height: auto;" />
        </div>
    }
    else
    {
        <div class="mb-3 text-muted">No image available</div>
    }

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" name="Title" class="form-control" value=" @Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" name="Description">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" name="Price" value="@Model.Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>