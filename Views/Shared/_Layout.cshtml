<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avat Co</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/avatCo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container-fluid">

                <!-- Left: Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/uploads/Home/avatCo_logo.png" alt="avatCo logo" class="logo me-2"/>
                    <span class="site-name">Avat Co</span>
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Center: Navigation -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">خانه</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">فروشگاه</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">وبلاگ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">خدمات</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">پشتیبانی</a></li>
                    </ul>
                </div>

                <!-- Right: Icons -->
                <div class="d-flex align-items-center">
                    <a href="#" class="nav-icon me-3"><i class="bi bi-search"></i></a>
                    <a href="#" class="nav-icon me-3"><i class="bi bi-cart"></i></a>
                    <a href="#" class="nav-icon"><i class="bi bi-person"></i></a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white">
        <div class="container py-5">
            <div class="row">

                <!-- Column 1: About -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold">Avat Co</h5>
                    <p class="small">
                        بزرگ‌ترین فروشگاه آنلاین محصولات بدنسازی و فیتنس در خاورمیانه
                    </p>
                </div>

                <!-- Column 2: Quick Links -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">لینک های سریع</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="footer-link">خانه</a></li>
                        <li><a href="#" class="footer-link">فروشگاه</a></li>
                        <li><a href="#" class="footer-link">وبلاگ</a></li>
                        <li><a href="#" class="footer-link">تماس با ما</a></li>
                    </ul>
                </div>

                <!-- Column 3: Support -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">پشتیبانی</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="footer-link">سوالات متداول</a></li>
                        <li><a href="#" class="footer-link">پیگیری سفارش</a></li>
                        <li><a href="#" class="footer-link">شرایط بازگشت</a></li>
                        <li><a href="#" class="footer-link">حریم خصوصی</a></li>
                    </ul>
                </div>

                <!-- Column 4: Contact -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">ارتباط با ما</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-telephone me-2"></i> شماره تماس</li>
                        <li><i class="bi bi-envelope me-2"></i> ایمیل</li>
                        <li><i class="bi bi-geo-alt me-2"></i> آدرس</li>
                    </ul>
                </div>
            </div>

            <hr class="border-light">

            <!-- Bottom Bar -->
            <div class="text-center small">
                © 2025 Avat Co - تمامی حقوق محفوظ است
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
